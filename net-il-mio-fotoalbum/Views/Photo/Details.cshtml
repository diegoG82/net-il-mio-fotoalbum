﻿@{
    Layout = "_CustomLayout";
}

@model Photo

<div class="container detailpizza text-center">

    <div class="title mt-4 w-75"><h1 class="mt-3 mb-3">DETAILS OF: @Model.Title</h1></div>


    <div class="singleimage mt-4">
        <img width="500" src="@Model.Image">
    </div>

    <div class="title  w-75 mt-4 mb-4">

        <p>Description: @Model.Description</p>

        <p>
           Categories:


            @if (Model.categories != null && Model.categories.Count > 0)
            {
                @string.Join(", ", Model.categories.Select(i => i.Name))
            }
            else
            {
                <span> No categories!!! I am a White paper!!!</span>
            }
        </p>


       



    </div>

</div>